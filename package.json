{
  "name": "cryptus",
  "version": "1.5.1",
  "description": "An ultra thin crypto wrapper for encrypting and decrypting utf-8 strings",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc --report html --reporter lcov --reporter text-summary mocha test",
    "codeclimate": "(test -e .codeclimate && npm run coverage && source .codeclimate && codeclimate-test-reporter < coverage/lcov.info) || echo skipping codeclimate",
    "lint": "eslint .",
    "test": "mocha test",
    "examples": "node ./examples/callback-example.js && node ./examples/synchronous-example.js && node ./examples/promise-example.js && node ./examples/async-await-example.js"
  },
  "bin": {
    "create-key": "./bin/create-key.js",
    "encrypt": "./bin/encrypt.js",
    "decrypt": "./bin/decrypt.js"
  },
  "keywords": [
    "cryptopgraphy",
    "crypto",
    "encrypt",
    "decrypt",
    "encryption",
    "decryption",
    "synchronous",
    "asynchronous",
    "callback",
    "promise",
    "async",
    "sync",
    "await"
  ],
  "author": "Stephen Cresswell",
  "license": "ISC",
  "devDependencies": {
    "async": "^3.1.0",
    "eslint": "^6.5.1",
    "eslint-config-imperative": "^3.0.0",
    "eslint-plugin-imperative": "^3.0.0",
    "husky": "^4.0.9",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "p-limit": "^2.2.0"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "dependencies": {},
  "engines": {
    "node": ">6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cressie176/cryptus.git"
  },
  "bugs": {
    "url": "https://github.com/cressie176/cryptus/issues"
  },
  "homepage": "https://cressie176.github.io/cryptus/",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run examples",
      "pre-push": "npm run lint && npm run codeclimate"
    }
  }
}
